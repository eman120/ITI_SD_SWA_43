<!DOCTYPE html>
<html>
<head>
    <title></title>
</head>
<body>
    <div style="display: grid ; grid-template-columns: repeat(2, 1fr)">
        <form style="height: 1000px; background-color: lightpink; padding:20px" method="post" >
            <p>Choose a backgroung image:</p>
            <select name="imgList">
                <option value="1.gif">1</option>
                <option value="2.gif">2</option>
                <option value="3.gif">3</option>
                <option value="4.gif">4</option>
                <option value="5.gif">5</option>
                <option value="6.gif">6</option>
            </select>

            <p>Choose a font color:</p>
            <select name="fontList">
                <option value="Black">Black</option>
                <option value="Purple">Purple</option>
                <option value="Red">Red</option>
                <option value="Blue">Blue</option>
                <option value="Green">Green</option>
            </select>

            <hr />

            <p>Choose a greeting Type:</p>
            <input type="radio" name="greet" value="birthday" checked/>Birthday
            <input type="radio" name="greet" value="GetWellSoon"/>Get Well Soon
            <input type="radio" name="greet" value="Valentine"/>Valentine
            <input type="radio" name="greet" value="Congrats"/>Congrats

            <input type="checkbox" name="check"/>Add the Image

            <p>Enter the greeting message bellow:</p>

            <textarea name="message"></textarea>

            <input type="submit" value="Preview" />
        </form>
        @{
            var fontColor ="";
            var imgPath = "";
            if ((IsPost))
            {
                imgPath = "images/" + Request["imgList"];
                fontColor = Request["fontList"];
            }
        <div style="height: 1000px; background-image: url('/Greeting Card Maker/backgrounds/11.jpg'); text-align: center; color: @fontColor">

            @if (Request["greet"] == "birthday")
            {
                <h1>Happy Birthday!!!!!!</h1>
            }
            else if (Request["greet"] == "GetWellSoon")
            {
                <h1>Get well soon!!!!!!</h1>
            }
            else if (Request["greet"] == "Valentine")
            {
                <h1>Happy Valentine's day!!!!!!</h1>
            }
            else if (Request["greet"] == "Congrats")
            {
                <h1>Congratulations!!!!!!</h1>
            }


            @if (Request["check"] != null)
            {
                <img src="@imgPath" />
            }

            <h1>@Request["message"]</h1>
        </div>
                
        }
    </div>
    
</body>
</html>
