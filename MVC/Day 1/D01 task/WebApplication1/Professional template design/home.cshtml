            </select>
            <input type="submit" value="Preview" />
        </form>
        @{
            var imgPath = "";
            if ((IsPost))
            {
                imgPath = "images/" + Request["imgList"];
            }
        }
        <img src="@imgPath" />
</div>
</body>
</html>
