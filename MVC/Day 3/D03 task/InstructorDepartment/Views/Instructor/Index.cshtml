@model IEnumerable<InstructorDepartment.Models.Instructor>

@{
    ViewBag.Title = "Index";
    var Departments = ViewBag.Departments;
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<form method="post" action="/Instructor/Index">
    @*@Html.DropDownList("Dept_Id", new SelectList(ViewBag.Departments, "Dept_Id", "Dept_Name"), htmlAttributes: new { @class = "form-control" })*@
    @Html.DropDownList("id" , new SelectList(Departments, "Dept_Id", "Dept_Name"))

    <input type="submit" value="choose" />

</form>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Ins_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ins_Degree)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Salary)
        </th>
